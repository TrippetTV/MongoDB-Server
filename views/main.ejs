<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="../resources/css/dimmer.css">

    <title>Main Page</title>
</head>
<body>
    <div class=".container-fluid">
        <div class="row align-items-center">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="col">
                    <a class="navbar-brand" href="/">Bookface</a>
                </div>
                <div class="col">
                    <div style="text-align: center">
                        <button class="btn btn-outline-success" id="post-create">Create Post</button>
                    </div>
                </div>
                <div class="col">
                    <div class="btn-toolbar">
                            <div class="btn-group mr-2">
                                <a href="/create"><button class="btn btn-outline-success">Signup</button></a>
                                <a href="/create"><button class="btn btn-outline-success">Login</button></a>
                            </div>
                        </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">

        </div>
        <div class="col">
            <form action="/" method="post" id="post-creation">

            </form>
            <div class="dimmer">
                <span class="exit">&times;</span>
            </div>
        </div>
        <div class="col">

        </div>
    </div>
    <div class="row">
        <div class="col">

        </div>
        <div id="posts" class="col">
            <% %>
        </div>
        <div class="col">

        </div>
    </div>


</body>
</html>
<script>
    let check = false;
    const button = document.querySelector("#post-create")
    const posts = document.querySelector("#post-creation")

    let textarea = document.createElement("textarea")
    let submits = document.createElement("button")
    button.addEventListener("click", (e) => {
        //const dimmer = $('.dimmer');
        if (!check) {
            textarea.style.width = "100%"
            textarea.style.height = "250px"
            textarea.style.resize = "none"


            submits.className = "btn btn-outline-success"
            submits.innerHTML = "Submit Post"
            posts.append(textarea)
            posts.append(submits)
            check = true
        }
    })
        exit = document.getElementsByClassName("exit")
        exit.addEventListener("onclick", (e) => {
            check = false
            textarea.remove()
            submits.remove()
        })
</script>