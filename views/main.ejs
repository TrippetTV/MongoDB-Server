<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="css/dimmer.css">
    <link rel="stylesheet" href="css/home.css">

    <title>Document</title>
</head>
<body>
    <div class=".container-fluid">
        <div class="row align-items-center">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="col">
                    <a class="navbar-brand" href="/">Bookface</a>
                </div>
                <div class="col">
                    <div style="text-align: center">
                        <!-- TODO Make button toggleable or add cancel button -->
                        <button class="btn btn-outline-info" id="post-create">Create Post</button>
                    </div>
                </div>
                <div class="col">
                    <div class="d-flex justify-content-end btn-toolbar">
                            <div class="btn-group mr-2">
                                <a href="/create"><button class="btn btn-outline-info">Signup</button></a>
                                <a href="/loginpage"><button class="btn btn-outline-info">Login</button></a>
                            </div>
                        </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">

        </div>
        <div class="col" id="post-creation">
            <form action="/" method="post" id="postmessage">
                <label for="message"></label>
                <textarea name="message" id="message" form="postmessage" placeholder="What's on your mind?"></textarea>
                <input type="submit" class="btn btn-outline-success" value="Post">
            </form>
            <div class="dimmer">
                <span class="exit">&times;</span>
            </div>
        </div>
        <div class="col">

        </div>
    </div>
    <div class="row">
        <div class="col">

        </div>
        <div id="posts" class="col">
            <% for (var i = data.count({}); i > 0; i--) { %>
            <div class="card" style="width: 100%">
                <div class="card-body">
                    <h5 class="card-title">Posted by <%= data.User %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <% let dd = String(data.date.getDate()).padStart(2, '0'); %>
                        <% let mm = String(data.date.getMonth() + 1).padStart(2, '0'); %>
                        <% let yyyy = data.date.getFullYear(); %>

                        <%= dd + '/' + mm + '/' + yyyy %>
                    </h6>
                    <p class="card-text"> <%= data.message %> </p>
                    <a href="" class="card-link">Edit Message</a>
                    <a href="" class="card-link">Delete Message</a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="col">

        </div>
    </div>


</body>
</html>
<script>
    let check = false;
    const button = document.querySelector("#post-create")
    const posts = document.querySelector("#post-creation")
    const txt = document.querySelector("#message")
    button.addEventListener("click", (e) => {
        //const dimmer = $('.dimmer');
        if (!check) {
            posts.style.visibility = "visible"
            txt.style.height = "250px"
            check = true
        }
    })
        exit = document.getElementsByClassName("exit")
        exit.addEventListener("onclick", (e) => {
            check = false
            txt.style.height = "0"
            posts.style.visibility = "hidden"

        })
</script>